<% if @blogger.errors.any? %>
  <div id = "error_explanation">
    <h2>
        <%= pluralize(@blogger.errors.count, "error") %>
        prohibited this form being saved
    </h2>
    <ul>
    <% @blogger.errors.full_messages.each do |msg|%>
    <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@blogger) do |f|%>
    <%= f.label :name, "Name:"%>
    <%= f.text_field :name %>
    <%= f.label :bio, "Bio:"%>
    <%= f.text_area :bio %>
    <%= f.label :age, "Age:"%>
    <%= f.number_field :age %>
    <%= f.submit%>
<% end %>